<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinemate.Views.ArticleContentPage"
             Title="Article's content"
             BackgroundColor="#9399C3">

    <Frame BackgroundColor="#EEF5FF" BorderColor="#EEF5FF" HasShadow="True" CornerRadius="20" Padding="10" Margin="20,20,20,20">
        <ScrollView>
            <VerticalStackLayout>
                <Image Source="{Binding ImageUrl}" Aspect="AspectFit" HeightRequest="200" HorizontalOptions="CenterAndExpand" Margin="20,10"/>
                <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="22" TextColor="#9399C3" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" Margin="20,10"/>
                <BoxView Color="Gray" HeightRequest="2" HorizontalOptions="Fill" />
                <Label Text="{Binding Content}" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center" HorizontalOptions="Center" Margin="10,20,10,20"/>
                <Label Text="{Binding Date}" FontSize="14" TextColor="Gray" HorizontalTextAlignment="End" HorizontalOptions="CenterAndExpand" Margin="10"/>
            </VerticalStackLayout>            
        </ScrollView>
    </Frame>
    
</ContentPage>